@import "tailwindcss";
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&family=Montserrat:wght@400;500;600;700;800;900&display=swap');

:root {
  /* SmartBuild Hub Brand Colors */
  --primary-yellow: #FFD700;
  --secondary-orange: #FF7A00;
  --background-dark: #1C1C1C;
  --text-white: #FFFFFF;
  --text-light: #E5E5E5;
  --card-dark: #2A2A2A;
  --border-gray: #3A3A3A;
  
  --background: var(--background-dark);
  --foreground: var(--text-white);
}

/* Custom CSS Variables for Tailwind */
@theme {
  --color-primary: var(--primary-yellow);
  --color-secondary: var(--secondary-orange);
  --color-background: var(--background-dark);
  --color-foreground: var(--text-white);
  --color-card: var(--card-dark);
  --color-border: var(--border-gray);
  --font-sans: 'Poppins', system-ui, sans-serif;
  --font-display: 'Montserrat', system-ui, sans-serif;
}

body {
  background: var(--background-dark);
  color: var(--text-white);
  font-family: 'Poppins', system-ui, sans-serif;
  line-height: 1.6;
}

/* SmartBuild Hub Custom Styles */
.font-display {
  font-family: 'Montserrat', system-ui, sans-serif;
}

.btn-primary {
  background: linear-gradient(to right, #FFD700, #FF7A00);
  color: black;
  font-weight: 600;
  padding: 12px 24px;
  border-radius: 20px;
  transition: all 0.3s ease;
}

.btn-primary:hover {
  box-shadow: 0 10px 20px rgba(255, 215, 0, 0.3);
  transform: scale(1.05);
}

.btn-secondary {
  background: #2A2A2A;
  color: white;
  border: 1px solid #4A4A4A;
  font-weight: 600;
  padding: 12px 24px;
  border-radius: 20px;
  transition: all 0.3s ease;
}

.btn-secondary:hover {
  background: #3A3A3A;
  border-color: #FFD700;
}

.card-dark {
  background: #2A2A2A;
  border: 1px solid #3A3A3A;
  border-radius: 12px;
}

.text-gradient {
  background: linear-gradient(to right, #FFD700, #FF7A00);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* Custom animations for SmartBuild Hub */
@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slide-up {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce-in {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes electric-spark {
  0%, 100% {
    opacity: 0.2;
    transform: scale(1) rotate(0deg);
  }
  25% {
    opacity: 0.8;
    transform: scale(1.1) rotate(90deg);
  }
  50% {
    opacity: 1;
    transform: scale(1.2) rotate(180deg);
  }
  75% {
    opacity: 0.8;
    transform: scale(1.1) rotate(270deg);
  }
}

@keyframes glow-pulse {
  0%, 100% {
    box-shadow: 0 0 5px rgba(255, 215, 0, 0.5);
  }
  50% {
    box-shadow: 0 0 20px rgba(255, 215, 0, 0.8), 0 0 30px rgba(255, 122, 0, 0.6);
  }
}

@keyframes scroll-infinite {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-100%);
  }
}

/* Animation Classes */
.animate-fade-in {
  animation: fade-in 0.8s ease-out;
}

.animate-slide-up {
  animation: slide-up 0.6s ease-out;
}

.animate-bounce-in {
  animation: bounce-in 0.8s ease-out;
}

.animate-electric-spark {
  animation: electric-spark 3s ease-in-out infinite;
}

.animate-glow-pulse {
  animation: glow-pulse 2s ease-in-out infinite;
}

.animate-scroll-infinite {
  animation: scroll-infinite 20s linear infinite;
}

/* Hover Glow Effects */
.hover-glow:hover {
  box-shadow: 0 0 15px rgba(255, 215, 0, 0.6), 0 0 25px rgba(255, 122, 0, 0.4);
  transition: box-shadow 0.3s ease;
}

/* Loading Spinner */
.spinner {
  border: 2px solid #3A3A3A;
  border-top: 2px solid #FFD700;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Responsive Design Helpers */
@media (max-width: 768px) {
  .mobile-bottom-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #1a1a1a;
    border-top: 1px solid #3A3A3A;
    padding: 8px;
    z-index: 50;
  }
}

/* Dark Theme Scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: #2A2A2A;
}

::-webkit-scrollbar-thumb {
  background: #4A4A4A;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: #FFD700;
}

/* Tailwind CSS Classes Extension */
.text-primary {
  color: #FFD700;
}

.text-secondary {
  color: #FF7A00;
}

.bg-dark {
  background-color: #1C1C1C;
}

.bg-dark-light {
  background-color: #2A2A2A;
}

.bg-primary {
  background-color: #FFD700;
}

.bg-secondary {
  background-color: #FF7A00;
}

.border-primary {
  border-color: #FFD700;
}

.border-secondary {
  border-color: #FF7A00;
}

.hover\:bg-primary-dark:hover {
  background-color: #E6C200;
}

.hover\:bg-secondary-dark:hover {
  background-color: #E66900;
}
